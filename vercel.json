{
  "framework": "vite",
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "redirects": [
    {
      "source": "/:path*",
      "destination": "https://big2.app/:path*",
      "permanent": true,
      "has": [
        {
          "type": "host",
          "value": "www.big2.app"
        }
      ]
    },
    {
      "source": "/how-to-play/",
      "destination": "/how-to-play",
      "permanent": true
    },
    {
      "source": "/rules/",
      "destination": "/rules",
      "permanent": true
    },
    {
      "source": "/strategy/",
      "destination": "/strategy",
      "permanent": true
    },
    {
      "source": "/faq/",
      "destination": "/faq",
      "permanent": true
    }
  ],
  "rewrites": [
    {
      "source": "/how-to-play",
      "destination": "/how-to-play/index.html"
    },
    {
      "source": "/rules",
      "destination": "/rules/index.html"
    },
    {
      "source": "/strategy",
      "destination": "/strategy/index.html"
    },
    {
      "source": "/faq",
      "destination": "/faq/index.html"
    },
    {
      "source": "/room/:path*",
      "destination": "/index.html"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}
